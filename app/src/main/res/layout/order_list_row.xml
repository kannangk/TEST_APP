<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="1dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="7"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:id="@+id/label_n"
                            android:text="N"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/item_value1"
                            android:paddingLeft="5dp"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:id="@+id/label_d"
                            android:text="D"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/item_value2"
                            android:paddingLeft="5dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:text="Â£ "
                            android:textSize="16sp"
                            android:textColor="@color/yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/price"
                            android:textSize="16sp"
                            android:textColor="@color/yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_lay"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:text="ADD"
                        android:background="@color/yellow"
                        android:paddingRight="10dp"
                        android:textColor="@color/dark_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/count_lay"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/item_add_border"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:id="@+id/sub_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="-"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/dark_gray"/>
                        <TextView
                            android:id="@+id/count_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="1"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/dark_gray"/>
                        <TextView
                            android:id="@+id/add_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="+"
                            android:textColor="@color/dark_gray"/>
                    </TableRow>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/speech_bubble"/>
                </LinearLayout>

            </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/light_gray"
        android:layout_height="1dp"/>
</LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>